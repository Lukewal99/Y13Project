<UserControl x:Class="GraphControl.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="720"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="370"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        
        <Canvas x:Name="GraphCanvas" Background="White" Grid.Column="1" Grid.Row="0" Margin="5">
            
        </Canvas>
        <Canvas x:Name="YAxis" Background="White" Grid.Column="0" Grid.Row="0">

        </Canvas>
        <Canvas x:Name="XAxis" Background="White" Grid.Column="1" Grid.Row="1">

        </Canvas>
        <Canvas Background="White" Grid.Column="0" Grid.Row="1">

        </Canvas>
    </Grid>
</UserControl>
